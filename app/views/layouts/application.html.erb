<!DOCTYPE html>
<html>
<head>
  <title>EcommerceApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav class="navbar navbar-trans navbar-fixed-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapsible">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/products/">Home</a>
    </div>
    <div class="navbar-collapse collapse" id="navbar-collapsible">
      <ul class="nav navbar-nav navbar-left">
        
      <% if current_user %>
        <li><a href="/users/sign_out">Sign-out</a></li>
      <% else %>
        <li><a href="/users/sign_in">Sign-in</a></li>
        <li><a href="/users/sign_up">Sign-up</a></li>
      <% end %> 
        
       
        <!-- <li><a href="/products?sort=discounted">Discounted Items</a></li> 
        <li><a href="/products?sort=rand">Random Product</a></li>
        <li><a href="/products/random">Random Show Page</a></li>
        <li><a href="#section3">abc</a></li>  -->
      
        <li>&nbsp;</li>
      </ul>
      <%= form_tag '/products', :method => :get, :class => "navbar-form navbar-left" do %>
                <%= text_field_tag :search %>
                <%= submit_tag "Search" %>
              <% end %>
      <form class="navbar-form">
        <div class="form-group" style="display:inline;">
          <div class="input-group"> 
            <div class="input-group-btn">
              <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-chevron-down"></span></button>
              <ul class="dropdown-menu">
                <li><a href="/products/?sort=Decending">Sort by Price Decending</a></li>
                <li><a href="/products/?sort=Ascending">Sort by Price Ascending</a></li>
                <li><a href="/products/?sort=Category">Sort by Category</a></li>
                <li><a href="so">Sort by Alphabetical Order</a></li>
                <li><a href="#">Sort by Brand</a></li> 
              </ul>
              
           
           
            
            </div> 
          </div>
        </div>
      </form>
    </div>
  </div>
</nav>




<div class="container alert_message">
  <% flash.each do |name, message| %>
    <div class="alert alert-<%= name %>">
    <% message %>
    </div>
  <% end %>

<%= yield %>

</div>

</body>
</html>
